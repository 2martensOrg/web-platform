{% extends 'TwoMartensCoreBundle::area.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block innerContent %}
    <p class="alert alert-warning" role="alert">{% trans from 'TwoMartensCoreBundle' %}acp.group.edit.warning{% endtrans %}</p>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {% for name, field in form %}
        {% if name != 'save' %}
            {{ form_row(field) }}
        {% endif %}
    {% endfor %}
    {{ form_row(form.save, {'attr': {'class': 'btn-primary'}}) }}
    {{ form_end(form) }}
{% endblock %}
